= form_for(@truth) do |f|
  .fieldset
    = f.label :author_name, "Your Name (optional):"
    %br
    = f.text_field :author_name
  .fieldset
    = f.label :title, "Title of Truth:"
    %br
    = f.text_field :title
  .fieldset
    = f.label :truth, "The Truth About Law School:"
    %br
    = f.text_area :body, :size => "50x10"
  = f.submit